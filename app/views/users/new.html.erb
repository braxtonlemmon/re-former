<%= form_for @user, url: { action: "create" } do |f| %>
	<%= f.label :username, "Username:" %><br>
	<%= f.text_field :username, placeholder: "Your user name here" %><br>
	<%= f.label :email, "Email:" %><br>
	<%= f.text_field :email, placeholder: "Your email here" %><br>
	<%= f.label :password, "Password:" %><br>
	<%= f.password_field :password, placeholder: "Your password here" %><br>
	<%= f.submit "Submit"%>
<% end %>


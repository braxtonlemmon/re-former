<% if @user.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(@user.errors.count, "error") %>
		prevented this user from being saved:</h2>
		<ul>
		<% @user.errors.full_messages.each do |msg| %>
		  <li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<%= form_for @user, url: { action: "create" } do |f| %>
	<%= f.label :username, "Username:" %><br>
	<%= f.text_field :username, placeholder: "Your user name here" %><br>
	<%= f.label :email, "Email:" %><br>
	<%= f.text_field :email, placeholder: "Your email here" %><br>
	<%= f.label :password, "Password:" %><br>
	<%= f.password_field :password, placeholder: "Your password here" %><br>
	<%= f.submit "Submit"%>
<% end %>

